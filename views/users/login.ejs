<% layout("/layouts/boilerplate")%>

<div class="row mt-3 mb-5">
    <div class="col-6  offset-3">
        <h1>Login</h1>
        <br>
        <form action="/login" method="POST" class="needs-validation" novalidate>
             <div class="mb-3">
             <label for="username" class="form-label">Username</label>
             <input placeholder="Username" id="username" name="username" type="text" class="form-control" required>
          
            </div>


            <div class="mb-3">
             <label for="password" class="form-label">Password</label>
             <input placeholder="password" id="password" name="password" type="password" class="form-control" required>
            </div>

              <button type="submit" class="btn btn-success mb-5">Login</button>

        </form>
        <br><br><br><br><br><br><br><br>
    </div>
</div>